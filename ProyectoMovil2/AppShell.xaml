<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoMovil2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoMovil2"
    xmlns:views="clr-namespace:ProyectoMovil2.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ProyectoMovil2">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="#007ACC" HeightRequest="150" Padding="20">
                <VerticalStackLayout VerticalOptions="Center">
                    <Label 
                        Text="Administración de Alumnos"
                        FontSize="20"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalOptions="Center" />
                    <Label 
                        Text="Menú Principal"
                        FontSize="14"
                        TextColor="White"
                        HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <!-- Página de Login (sin menú) -->
    <ShellContent
        Title="Login"
        Route="LoginPage"
        Shell.FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Página Principal -->
    <FlyoutItem Title="Inicio">
        <ShellContent
            Title="Inicio"
            Route="MainPage"
            ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <!-- Opción Lunes en el menú -->
    <FlyoutItem Title="Lunes">
        <ShellContent
            Title="Lunes"
            Route="LunesPage"
            ContentTemplate="{DataTemplate views:LunesPage}" />
    </FlyoutItem>

    <!-- Separador -->
    <MenuItem Text="Cerrar Sesión" 
              Clicked="OnLogoutClicked"
              />

</Shell>

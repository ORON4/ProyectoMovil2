<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ProyectoMovil2.Models"
             xmlns:viewmodel="clr-namespace:ProyectoMovil2.ViewModels"
             
             x:Class="ProyectoMovil2.Views.AsistenciaPage"
             x:DataType="viewmodel:AsistenciaPageViewModel"
             Title="{Binding Title}">

    <StackLayout Padding="10" Spacing="10">

        <Label Text="Seleccionar Fecha:" FontAttributes="Bold" FontSize="16"/>
        <DatePicker Date="{Binding FechaSeleccionada}" />

        <BoxView HeightRequest="1" Color="LightGray" />

        <RefreshView IsRefreshing="{Binding IsBusy}"
                     Command="{Binding CargarAlumnosCommand}">
            <CollectionView ItemsSource="{Binding Alumnos}">
                <CollectionView.EmptyView>
                    <Label Text="No hay alumnos en este grupo."
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Gray" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Alumno">

                        <Frame Margin="0,5" Padding="10" CornerRadius="5" BorderColor="LightGray">
                            <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="10">

                                <Label Grid.Column="0" 
                                       Text="{Binding NombreAlumno}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>

                                <Button Grid.Column="1" 
                                        Text="Presente" 
                                        BackgroundColor="Green"
                                        TextColor="White"
                                        FontSize="12"
                                        WidthRequest="90"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AsistenciaPageViewModel}}, Path=MarcarPresenteCommand}"
                                        CommandParameter="{Binding .}" />
                                <Button Grid.Column="2" 
                                        Text="Ausente" 
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        FontSize="12"
                                        WidthRequest="90"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AsistenciaPageViewModel}}, Path=MarcarAusenteCommand}"
                                        CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </StackLayout>
</ContentPage>
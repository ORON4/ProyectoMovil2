<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMovil2.Views.GrupoPage"
             Title="GrupoPage">
    <VerticalStackLayout 
        Padding="20"
        Spacing="20"
        VerticalOptions="Center">

        <Label 
            Text="Base de datos"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="#007ACC" />

        <Button 
            Text="Tareas"
            Command="{Binding IrATareasCommand}"
            BackgroundColor="#007ACC"
            TextColor="White"
            CornerRadius="10"
            WidthRequest="200"
            HeightRequest="50"
            FontSize="18"
            FontAttributes="Bold" />

        <Button
            Text="Asistencia"
            Command="{Binding IrAAsistenciasCommand}"
            BackgroundColor="#007ACC"
            TextColor="White"
            CornerRadius="10"
            HeightRequest="50"
            WidthRequest="200"
            FontSize="18"
            FontAttributes="Bold" />

        <Button
            Text="Escanear QR"
            Command="{Binding IrAEscanerCommand}"
            BackgroundColor="#FF8C00"
            TextColor="White"
            CornerRadius="10"
            HeightRequest="50"
            WidthRequest="200"
            FontSize="18"
            FontAttributes="Bold" />

    </VerticalStackLayout>
</ContentPage>
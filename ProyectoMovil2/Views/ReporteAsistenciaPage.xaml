<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ProyectoMovil2.Models"
             xmlns:viewmodel="clr-namespace:ProyectoMovil2.ViewModels"
             x:Class="ProyectoMovil2.Views.ReporteAsistenciaPage"
             x:DataType="viewmodel:ReporteAsistenciaPageViewModel"
             Title="{Binding Title}">

    <StackLayout Padding="10" Spacing="10">

        <!-- 1. Selector de Fecha -->
        <Label Text="Seleccionar Fecha del Reporte:" FontAttributes="Bold" FontSize="16"/>
        <DatePicker Date="{Binding FechaSeleccionada}" />

        <BoxView HeightRequest="1" Color="LightGray" />

        <!-- 2. Lista de Asistencias del Día -->

        <!-- Indicador de Carga -->
        

        <CollectionView ItemsSource="{Binding Asistencias}"
                        IsVisible="{Binding IsNotBusy}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:AsistenciaReporte">
                    <Frame Margin="0,5" Padding="10" CornerRadius="5" BorderColor="LightGray">
                        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">

                            <!-- Nombre del Alumno -->
                            <Label Grid.Column="0" 
                                   Text="{Binding NombreAlumno}" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>

                            <!-- Indicador de Asistencia -->
                            <Label Grid.Column="1" 
                                   VerticalOptions="Center"
                                   FontAttributes="Bold">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding Asistencia}" Value="True">
                                        <Setter Property="Text" Value="Presente" />
                                        <Setter Property="TextColor" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Asistencia}" Value="False">
                                        <Setter Property="Text" Value="Ausente" />
                                        <Setter Property="TextColor" Value="Red" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator IsRunning="{Binding IsBusy}"
                   IsVisible="{Binding IsBusy}"
                   VerticalOptions="CenterAndExpand" />

        <!-- Mensaje de Error / Vacío -->
        <Label Text="{Binding MensajeError}"
       IsVisible="{Binding IsNotBusy}"
       TextColor="Gray"
       FontSize="16"
       HorizontalOptions="Center"
       VerticalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>
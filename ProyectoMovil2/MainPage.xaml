<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMovil2.MainPage">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label 
                Text="{Binding NombreUsuario, StringFormat='Hola, {0}!'}"
                FontSize="24"
                FontAttributes="Bold" />

            <Label 
                Text="Bienvenido!"
                FontSize="16"
                TextColor="Gray" />
        </VerticalStackLayout>

        <!-- Contenido Principal -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">

                <!-- Tarjeta de ejemplo -->
                <Frame 
                    BorderColor="#DDDDDD"
                    CornerRadius="10"
                    HasShadow="True"
                    Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label 
                            Text="Panel Principal"
                            FontSize="18"
                            FontAttributes="Bold" />
                        <Label 
                            Text="Aquí puedes mostrar información de tu API"
                            TextColor="Gray" />
                        <Button 
                            Text="Cargar Datos"
                            Command="{Binding LoadDataCommand}"
                            BackgroundColor="#007ACC"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Indicador de carga -->
                <ActivityIndicator 
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    Color="#007ACC"
                    HeightRequest="50" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer con botón de logout -->
        <Button 
            Grid.Row="2"
            Text="Cerrar Sesión"
            Command="{Binding LogoutCommand}"
            BackgroundColor="#DC3545"
            TextColor="White"
            CornerRadius="10"
            HeightRequest="50"
            Margin="0,20,0,0" />

    </Grid>
</ContentPage>
